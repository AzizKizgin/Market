@using Market.Models;
@model List<TBLCategory>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3" style="margin-right:5dp">
            <div class="card mb-3 " style="max-width: 540px;">
                <div class="row g-0 ">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-primary">
                            <p class="card-text">
                                <h5 class="card-title">
                                    <a class="text-white float-right"><i class="bi bi-pencil-square"></i>@item.NAME</a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 ">
                        <div class="card-body">
                            <p class="card-text">@item.NAME</p>
                           
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a href="/Property/Properties/@item.ID" class="btn btn-success text-white"><i class="bi bi-cart-plus">Kategoriye Git</i></a>
                                <a href="/Category/GetCAtegory/@item.ID" class="btn btn-info">Düzenle</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


</div>
<a href="/Category/Add" class="btn btn-info">Yeni Kategori Ekle</a>
<div>
    <a href="/Property/AddProp" class="btn btn-primary" style="margin-top:10px">Yeni Ürün Ekle</a>
</div>