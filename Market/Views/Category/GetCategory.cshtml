@model Market.Models.TBLCategory

@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Update", "Category", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        @Html.LabelFor(k => k.NAME)
        @Html.TextBoxFor(k => k.NAME, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-success">Güncelle</button>

    </div>
}

<a href="/Category/Delete/@Model.ID" class="btn btn-danger">Sil</a>
